<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:DayOnes.Views.Components"
             BackgroundColor="{StaticResource DefaultBlack}"
             x:Class="DayOnes.Views.HUPLPhotoChooseSigPage"
             >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="548"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!--Row 1-->
        <components:GradientButton
               HorizontalOptions="EndAndExpand"
           Grid.Row="0"
                Text="ðŸ”™" 
                FontSize="25"
                Width="90" 
                Height="40" 
                Name="btnBack" 
                OnClick="btnBack_Click"
           
           />

        <!--Row 2-->
        <components:FanTitleBar
             Grid.Row="1"
            Title="Choose Action"
        />

        <!--Row 3-->
        <Image 
            Grid.Row="2"
            Source="selfie.png"
            WidthRequest="390"
            VerticalOptions="Start"
            />

        <!--Row 4-->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions >
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Row 1-->
            <HorizontalStackLayout
                Grid.Row="0"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand"
                >
                <Label 
                    Text="Choose Signature" 
                    TextColor="{StaticResource DefaultWhite}" 
                    VerticalOptions="Center"
                    Margin="10,0,10,0"
                    />

                <Button
                    Text="Cancel"
                    BackgroundColor="{StaticResource DefaultGrey}"
                    TextColor="{StaticResource DefaultBlack}"
                    WidthRequest="90"
                    HorizontalOptions="Center"
                    Margin="10,3,10,3"
                    />

            </HorizontalStackLayout>

            <!--Row 2-->
            <BoxView 
                    Grid.Row="1"
                    HeightRequest="1" 
                Color="{StaticResource DefaultPurple}"/>



            <ScrollView 
                Grid.Row="2"
                Orientation="Horizontal">
                <HorizontalStackLayout>
                    <Image 
                        Source="sig3.png"
                        WidthRequest="70"
                        />
                    <Image 
                        Source="sig2.png"
                        WidthRequest="70"
                        />
                    <Image 
                        Source="sig3.png"
                        WidthRequest="70"
                        />
                    <Image 
                        Source="sig2.png"
                        WidthRequest="70"
                        />
                </HorizontalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>