<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayOnes.Views.Components.GradientButton">
    <VerticalStackLayout>

        <Button x:Name="gradientButton" Clicked="OnButtonClicked"
            WidthRequest="223"
            HeightRequest="60"
                                Padding="25,10"
           
                    FontFamily="SFProText"
            TextColor="#FFFFFF"
                >
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#E70971" Offset="0.0" />
                    <GradientStop Color="#6B1C56" Offset="1.0" />
                </LinearGradientBrush>
            </Button.Background>


        </Button>
    </VerticalStackLayout>
</ContentView>
